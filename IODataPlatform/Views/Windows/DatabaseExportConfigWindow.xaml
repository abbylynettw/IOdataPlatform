<Window x:Class="IODataPlatform.Views.Windows.DatabaseExportConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="数据库更新配置" 
        Height="650" 
        Width="800"
        MinHeight="500"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <ui:SymbolIcon Symbol="Database24" FontSize="24" VerticalAlignment="Center"/>
                <ui:TextBlock Text="数据库更新配置" FontSize="20" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- 文件选择 -->
            <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="15"
                    Background="{DynamicResource LayerFillColorDefaultBrush}"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ui:TextBlock Grid.Column="0" 
                                  Text="目标文件：" 
                                  FontSize="14" 
                                  FontWeight="Medium" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,15,0"/>
                    <ui:TextBox Grid.Column="1" 
                                x:Name="FilePathTextBox" 
                                PlaceholderText="请选择要更新的Excel数据库文件"
                                IsReadOnly="True"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                    <ui:Button Grid.Column="2" 
                               Content="浏览" 
                               Click="BrowseFileButton_Click"
                               MinWidth="100"/>
                </Grid>
            </Border>
            
            <!-- 控制系统选择 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <ui:TextBlock Text="控制系统：" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <RadioButton x:Name="RadioLongfin" 
                             Content="龙鳍系统" 
                             GroupName="ControlSystem" 
                             IsChecked="True" 
                             Checked="ControlSystemRadio_Checked"
                             FontSize="14"
                             Margin="0,0,20,0"/>
                <RadioButton x:Name="RadioZhongkong" 
                             Content="中控系统" 
                             GroupName="ControlSystem" 
                             Checked="ControlSystemRadio_Checked"
                             FontSize="14"/>
            </StackPanel>
            
            <ui:TextBlock Text="请选择需要更新的点类型，系统将根据通道号（CHN）匹配更新数据" 
                          FontSize="14" 
                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- 主内容区域 -->
        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource ControlElevationBorderBrush}" 
                BorderThickness="1" 
                CornerRadius="6" 
                Margin="0,0,0,20">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 操作按钮 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,15">
                    <ui:Button x:Name="SelectAllButton" 
                               Content="全选" 
                               Click="SelectAllButton_Click" 
                               Margin="0,0,10,0"
                               MinWidth="80"/>
                    <ui:Button x:Name="UnselectAllButton" 
                               Content="取消全选" 
                               Click="UnselectAllButton_Click" 
                               Margin="0,0,30,0"
                               MinWidth="80"/>
                    
                    <!-- 统计信息 -->
                    <ui:TextBlock x:Name="SelectedCountText" 
                                  Text="已选中：0个点类型" 
                                  VerticalAlignment="Center" 
                                  FontWeight="Medium"/>
                </StackPanel>
                
                <!-- 点类型列表 -->
                <ScrollViewer Grid.Row="1" Margin="20,0,20,20">
                    <ItemsControl x:Name="PointTypesItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" 
                                        Padding="12"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Background="{DynamicResource LayerFillColorDefaultBrush}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                  VerticalAlignment="Center"
                                                  Checked="PointTypeCheckBox_Changed"
                                                  Unchecked="PointTypeCheckBox_Changed"/>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <ui:TextBlock Text="{Binding DisplayName}" 
                                                          FontWeight="Medium"
                                                          FontSize="14"/>
                                            <ui:TextBlock Text="{Binding Description}" 
                                                          FontSize="12"
                                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                          Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <ui:Button x:Name="UpdateButton" 
                       Content="更新" 
                       Click="UpdateButton_Click" 
                       Margin="0,0,10,0" 
                       MinWidth="100"
                       IsEnabled="False"
                       Appearance="Primary"/>
            <ui:Button x:Name="CancelButton" 
                       Content="取消" 
                       Click="CancelButton_Click" 
                       MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
