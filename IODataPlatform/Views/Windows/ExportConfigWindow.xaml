<Window x:Class="IODataPlatform.Views.Windows.ExportConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:export="clr-namespace:IODataPlatform.Views.SubPages.Export"
        mc:Ignorable="d"
        Title="IO清单导出配置" 
        Height="800" 
        Width="1000"
        MinHeight="700"
        MinWidth="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题和导出类型 -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <!-- 标题 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <ui:SymbolIcon Symbol="TableSettings24" FontSize="24" VerticalAlignment="Center"/>
                <ui:TextBlock Text="IO清单导出配置" FontSize="20" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- 导出类型选择 -->
            <StackPanel Orientation="Horizontal">
                <ui:TextBlock Text="导出类型：" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="Medium"/>
                <RadioButton x:Name="CompleteListRadio" 
                             Content="完整IO清单" 
                             GroupName="ExportType" 
                             IsChecked="False"
                             Margin="0,0,30,0"
                             Checked="ExportTypeRadio_Checked"/>
                <RadioButton x:Name="CurrentSystemRadio" 
                             Content="当前控制系统IO清单" 
                             GroupName="ExportType"
                             IsChecked="True"
                             Margin="0,0,30,0"
                             Checked="ExportTypeRadio_Checked"/>
                <RadioButton x:Name="PublishedListRadio" 
                             Content="发布的IO清单" 
                             GroupName="ExportType"
                             Margin="0,0,30,0"
                             Checked="ExportTypeRadio_Checked"/>
                
                <!-- 默认配置导出按钮 -->
                <ui:Button x:Name="DefaultExportButton"
                           Content="默认配置导出"
                           Click="DefaultExportButton_Click"
                           Margin="30,0,0,0"
                           MinWidth="120"
                           ToolTip="根据当前选择的导出类型，使用系统默认配置直接导出"
                           Appearance="Primary"/>
            </StackPanel>
        </StackPanel>

        <!-- 步骤指示器 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Border x:Name="Step1Border" 
                    Background="{DynamicResource AccentFillColorDefaultBrush}" 
                    CornerRadius="20" 
                    Width="40" Height="40" 
                    Margin="0,0,10,0">
                <ui:TextBlock Text="1" 
                              Foreground="White" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
            </Border>
            <ui:TextBlock Text="选择字段" VerticalAlignment="Center" Margin="0,0,30,0" FontWeight="Medium"/>
            
            <Border x:Name="Step2Border" 
                    Background="{DynamicResource ControlFillColorDisabledBrush}" 
                    CornerRadius="20" 
                    Width="40" Height="40" 
                    Margin="0,0,10,0">
                <ui:TextBlock Text="2" 
                              Foreground="{DynamicResource TextFillColorDisabledBrush}" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
            </Border>
            <ui:TextBlock x:Name="Step2Text" 
                          Text="排序列" 
                          VerticalAlignment="Center" 
                          Margin="0,0,30,0" 
                          FontWeight="Medium" 
                          Foreground="{DynamicResource TextFillColorDisabledBrush}"/>
            
            <Border x:Name="Step3Border" 
                    Background="{DynamicResource ControlFillColorDisabledBrush}" 
                    CornerRadius="20" 
                    Width="40" Height="40" 
                    Margin="0,0,10,0">
                <ui:TextBlock Text="3" 
                              Foreground="{DynamicResource TextFillColorDisabledBrush}" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
            </Border>
            <ui:TextBlock x:Name="Step3Text" 
                          Text="预览导出" 
                          VerticalAlignment="Center" 
                          FontWeight="Medium" 
                          Foreground="{DynamicResource TextFillColorDisabledBrush}"/>
        </StackPanel>

        <!-- 主内容区域 -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource ControlElevationBorderBrush}" 
                BorderThickness="1" 
                CornerRadius="6" 
                Margin="0,0,0,20">
            
            <!-- 步骤容器 -->
            <Grid>
                <!-- 步骤1：字段选择 -->
                <Grid x:Name="Step1Panel" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 操作按钮 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,15">
                    <!-- 字段操作区域 -->
                    <ui:Button x:Name="SelectAllFieldsButton" 
                               Content="全选" 
                               Click="SelectAllFieldsButton_Click" 
                               Margin="0,0,10,0"/>
                    <ui:Button x:Name="UnselectAllFieldsButton" 
                               Content="取消全选" 
                               Click="UnselectAllFieldsButton_Click" 
                               Margin="0,0,30,0"/>
                    
                    <!-- 配置管理区域 -->
                    <ui:TextBlock Text="配置：" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,8,0" 
                                  FontWeight="Medium"/>
                    <ComboBox x:Name="SavedConfigsComboBox" 
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              Width="180"
                              SelectionChanged="SavedConfigsComboBox_SelectionChanged"
                              Margin="0,0,10,0"
                              DisplayMemberPath="Display"/>
                    <ui:Button x:Name="DeleteConfigButton" 
                               Content="删除" 
                               Click="DeleteConfigButton_Click" 
                               Margin="0,0,30,0"
                               Appearance="Secondary"/>
                    
                    <!-- 统计信息 -->
                    <ui:TextBlock x:Name="SelectedFieldsCountText" 
                                  Text="已选中：0个字段" 
                                  VerticalAlignment="Center" 
                                  FontWeight="Medium"/>
                </StackPanel>
                
                <!-- 字段列表 -->
                <ScrollViewer Grid.Row="1" Margin="20,0,20,20">
                    <ItemsControl x:Name="FieldsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" 
                                        Padding="8"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Background="{DynamicResource LayerFillColorDefaultBrush}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsVisible}"
                                                  VerticalAlignment="Center"
                                                  Checked="FieldCheckBox_Checked"
                                                  Unchecked="FieldCheckBox_Unchecked"/>
                                        <StackPanel Margin="8,0,0,0" VerticalAlignment="Center">
                                            <ui:TextBlock Text="{Binding DisplayName}" 
                                                          FontWeight="Medium"
                                                          FontSize="13"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            
            <!-- 步骤2：列排序 -->
            <Grid x:Name="Step2Panel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="20,20,20,15">
                    <ui:TextBlock Text="拖拽下列字段来调整导出顺序" 
                                  FontSize="14" 
                                  Margin="0,0,0,10"/>
                    <ui:TextBlock x:Name="SelectedFieldsCountText2" 
                                  Text="已选中：0个字段" 
                                  FontWeight="Medium"/>
                </StackPanel>
                
                <export:DraggableColumnPanel x:Name="ColumnPanel" 
                                             Grid.Row="1"
                                             Margin="20,0,20,20"
                                             MinHeight="200"/>
            </Grid>
            
            <!-- 步骤3：预览 -->
            <Grid x:Name="Step3Panel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,15">
                    <ui:TextBlock x:Name="RecordCountText" 
                                  Text="共计：0条记录" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,0"
                                  FontWeight="Medium"/>
                    <ui:TextBlock x:Name="FieldCountText" 
                                  Text="导出字段：0个" 
                                  VerticalAlignment="Center" 
                                  FontWeight="Medium"/>
                </StackPanel>
                
                <DataGrid x:Name="PreviewDataGrid"
                          Grid.Row="1"
                          Margin="20,0,20,20"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Extended"
                          AlternatingRowBackground="{DynamicResource SubtleFillColorSecondaryBrush}">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource LayerFillColorDefaultBrush}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Margin" Value="0,1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SubtleFillColorTertiaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Grid>
            </Grid>
        </Border>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <!-- 默认配置导出按钮 -->
          
            <ui:Button x:Name="SaveConfigButton" 
                       Content="保存配置" 
                       Click="SaveConfigButton_Click" 
                       Margin="0,0,10,0" 
                       MinWidth="80"/>
            <ui:Button x:Name="PreviousButton" 
                       Content="上一步" 
                       Click="PreviousButton_Click" 
                       Margin="0,0,10,0" 
                       MinWidth="80"
                       Visibility="Collapsed"/>
            <ui:Button x:Name="NextButton" 
                       Content="下一步" 
                       Click="NextButton_Click" 
                       Margin="0,0,10,0" 
                       MinWidth="80"
                       Appearance="Primary"/>
            <ui:Button x:Name="CancelButton" 
                       Content="取消" 
                       Click="CancelButton_Click" 
                       Margin="0,0,10,0" 
                       MinWidth="80"/>
            <ui:Button x:Name="ExportButton" 
                       Content="导出Excel"
					    Margin="0,0,10,0"
                       Click="ExportButton_Click" 
                       Appearance="Primary" 
                       MinWidth="100"
                       Background="#FF0078D4"
                       Visibility="Collapsed"/>
			
        </StackPanel>
    </Grid>
</Window>
