<ui:FluentWindow x:Class="IODataPlatform.Views.Windows.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:IODataPlatform.Views.Windows"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:ly="http://lysoft/wpf"
                 xmlns:ly1="clr-namespace:IODataPlatform.Utilities"
                 Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
                 Width="1430"
                 Height="830"
                 d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
                 d:DesignHeight="830"
                 d:DesignWidth="1430"
                 ExtendsContentIntoTitleBar="True"
                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d">
    <Window.Resources>
        <ly:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter" />
    </Window.Resources>
    <!-- 定义主网格布局 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!-- 定义导航视图 -->
        <ui:NavigationView Background="Green"
                           x:Name="RootNavigation"
                           Grid.Row="0"
                           Panel.ZIndex="0"
                           Padding="25,0,25,10"
                           BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
                           FooterMenuItemsSource="{Binding ViewModel.FooterMenuItems, Mode=OneWay}"
                           FrameMargin="0"
                           IsBackButtonVisible="Visible"
                           IsPaneToggleVisible="True"                           
                           MenuItemsSource="{Binding ViewModel.MenuItems, Mode=OneWay}"                        
                           OpenPaneLength="180"
                           PaneDisplayMode="Left"
                           TitleBar="{Binding ElementName=TitleBar, Mode=OneWay}">
            <!-- 导航视图头部定义为面包屑栏 -->
            <ui:NavigationView.Header>
                <ui:BreadcrumbBar x:Name="BreadcrumbBar"
                                  Margin="42,15,42,10">
                </ui:BreadcrumbBar>
            </ui:NavigationView.Header>
            <!-- 导航视图侧边栏头部定义为超链接按钮 -->
            <ui:NavigationView.PaneHeader>
                <ui:HyperlinkButton Margin="0,0,0,10"
                                    Appearance="Danger"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Person24"
                                       Margin="0,0,5,0"
                                       FontSize="16" />
                        <ui:TextBlock FontSize="15"
                                      Text="{Binding ViewModel.User.DisplayText}"
                                      VerticalAlignment="Center" />
                    </StackPanel>
                </ui:HyperlinkButton>
            </ui:NavigationView.PaneHeader>
        </ui:NavigationView>

        <!-- 内容呈现器，用于显示消息内容对话框 -->
        <ContentPresenter x:Name="MessageContentDialog"
                          Grid.RowSpan="2"
                          Panel.ZIndex="9999" />
        <!-- 消息提示条 -->
        <ui:SnackbarPresenter x:Name="SnackbarPresenter"
                              Grid.RowSpan="2"
                              Panel.ZIndex="9998" />

        <!-- 状态栏 -->
        <StatusBar Grid.Row="1"
                   HorizontalContentAlignment="Stretch">
            <StatusBarItem HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <!-- 状态指示器 -->
                    <Ellipse Width="10"
                             Height="10"
                             Margin="0,0,10,0"
                             Stroke="Black"
                             Fill="{Binding ViewModel.Status.Brush}" />
                    <!-- 状态文本 -->
                    <ui:TextBlock Grid.Column="1"
                                  Text="{Binding ViewModel.Status.StatusText}" />
                    <!-- 分隔符 -->
                    <Separator Grid.Column="2"
                               Margin="0,0,10,0" />
                    <!-- 进度条 -->
                    <ProgressBar Grid.Column="3"
                                 Height="7"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding ViewModel.Status.Progress}"
                                 IsIndeterminate="{Binding ViewModel.Status.IsBusy}" />
                </Grid>
            </StatusBarItem>
        </StatusBar>

        <!-- 标题栏 -->
        <ui:TitleBar Grid.RowSpan="2"
                     x:Name="TitleBar"
                     Title="{Binding ViewModel.ApplicationTitle}"
                     FontSize="14"
                     Grid.Row="0"
                     CloseWindowByDoubleClickOnIcon="True">
            <!-- 标题栏图标 -->
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui.png" VerticalAlignment="Center" Width="auto" Height="auto" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
