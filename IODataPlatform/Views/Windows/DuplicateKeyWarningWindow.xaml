<ui:FluentWindow x:Class="IODataPlatform.Views.Windows.DuplicateKeyWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="主键重复警告"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 警告信息 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ui:SymbolIcon Symbol="Warning24" FontSize="24" Foreground="#FF9800" Margin="0,0,10,0" />
                <TextBlock Text="检测到主键重复" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" />
            </StackPanel>
            <TextBlock Text="以下主键值在数据中出现了多次，这可能会导致对比结果不准确。" 
                       TextWrapping="Wrap" 
                       Foreground="#666666"
                       Margin="0,0,0,5" />
            <TextBlock Text="建议：请检查数据源，确保主键的唯一性，或选择其他字段组合作为主键。" 
                       TextWrapping="Wrap" 
                       Foreground="#666666" />
        </StackPanel>

        <!-- 重复主键列表 -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4">
            <DataGrid x:Name="DuplicateKeysGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F9F9F9"
                      RowBackground="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="文件" Binding="{Binding FileName}" Width="*" />
                    <DataGridTextColumn Header="主键值" Binding="{Binding KeyValue}" Width="2*" />
                    <DataGridTextColumn Header="重复次数" Binding="{Binding Count}" Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="Foreground" Value="#F44336" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 统计信息 -->
        <Border Grid.Row="2" 
                Background="#FFF3E0" 
                Padding="15" 
                CornerRadius="4" 
                Margin="0,15,0,15">
            <TextBlock x:Name="SummaryText" 
                       FontWeight="SemiBold" 
                       Foreground="#E65100" />
        </Border>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <ui:Button Content="忽略并继续对比" 
                       Appearance="Primary"
                       Icon="Checkmark24"
                       Margin="0,0,10,0"
                       Click="ContinueButton_Click" />
            <ui:Button Content="取消" 
                       Icon="Dismiss24"
                       Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
