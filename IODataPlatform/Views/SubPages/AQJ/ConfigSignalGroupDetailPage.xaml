<Page x:Class="IODataPlatform.Views.SubPages.AQJ.ConfigSignalGroupDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IODataPlatform.Views.SubPages.AQJ"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:ly="http://lysoft/wpf"
      mc:Ignorable="d"
      ui:NavigationView.HeaderContent="配置信号详情"
      Title="ConfigSignalGroupDetailPage"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Page.Resources>
        <ly:NullToBooleanConverter IsInverse="True"
                                   x:Key="NullToBooleanConverter" />
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu>
           
            <ui:MenuItem Header="导入数据"
                         Icon="{ui:SymbolIcon TableMoveBelow24}"
                         Command="{Binding ViewModel.ImportCommand}" />
            <ui:MenuItem Header="下载当前数据"
                         Icon="{ui:SymbolIcon ArrowDownload16}"
                         Command="{Binding ViewModel.DownLoadCommand}" />
            <ui:MenuItem Header="全部删除"
                         Foreground="Red"
                         Icon="{ui:SymbolIcon Delete24}"
                         Command="{Binding ViewModel.DeleteCommand}" />
           
            <StackPanel Orientation="Horizontal"
                        Margin="10 2 0 2">
                <ui:TextBlock Text="当前信号组："
                              VerticalAlignment="Center" />
                <ui:TextBlock Text="{Binding ViewModel.SignalGroup.signalGroupName}"
                              VerticalAlignment="Center" />
                <Separator Width="1"></Separator>
            </StackPanel>
        </Menu>

        <ui:DataGrid Grid.Row="1"
                     Style="{StaticResource DataGridStyle}"
                     AutoGenerateColumns="True"
                     ItemsSource="{Binding ViewModel.SignalGroupDetails}">
            <ui:DataGrid.Columns>
                <DataGridTemplateColumn Width="60"
                                        Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <ui:Button CommandParameter="{Binding}"
                                           Icon="{ui:SymbolIcon Edit24}"
                                           Appearance="Primary"
                                           Command="{Binding RelativeSource={RelativeSource AncestorType=local:ConfigSignalGroupDetailPage}, Path=ViewModel.EditCommand}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </ui:DataGrid.Columns>
        </ui:DataGrid>

    </Grid>

</Page>
