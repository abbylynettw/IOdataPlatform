<ui:ContentDialog  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                   x:Class="IODataPlatform.Views.SubPages.Common.SelectExcelSheetDialog"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:IODataPlatform.Views.SubPages.Common"
                   d:DataContext="{d:DesignInstance Type=local:SelectExcelSheetDialogViewModel}"                   
                   mc:Ignorable="d"
                   d:DesignHeight="550"
                   d:DesignWidth="600"
                   PrimaryButtonText="确定导入"
                   CloseButtonText="取消"
                   Title="导入 Excel 数据">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}"
               TargetType="{x:Type local:SelectExcelSheetDialog}" />
    </ui:ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 当前系统信息显示 -->
        <ui:InfoBar Grid.Row="0" 
                    Severity="Informational" 
                    Message="{Binding CurrentSystemInfo}"
                    IsOpen="True"
                    IsClosable="False"
                    Margin="0,0,0,15" />

        <!-- 步骤提示 -->
        <Border Grid.Row="1" 
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="15,10"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="① 选择 Excel 文件" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBlock Text="② 选择工作表（Sheet）" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,5"/>
                <TextBlock Text="③ 点击确定导入" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- 文件选择 -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ui:SymbolIcon Grid.Column="0" 
                               Symbol="Document24" 
                               FontSize="20"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="选择的文件"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding SelectFilePath}" 
                               FontSize="14"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding SelectFilePath}"/>
                </StackPanel>
                
                <ui:Button Grid.Column="2"
                           Icon="{ui:SymbolIcon FolderOpen24}"
                           Content="浏览..."
                           Command="{Binding SelectFileCommand}"
                           Appearance="Primary"/>
            </Grid>
        </Border>
        
        <!-- Sheet列表区域 -->
        <Border Grid.Row="3"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 标题 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <ui:SymbolIcon Symbol="Table24" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="可用的工作表" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock Text="{Binding SheetCountText}" 
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- 加载中提示 -->
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="{Binding IsLoadingSheets, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ui:ProgressRing IsIndeterminate="True" Width="48" Height="48"/>
                    <TextBlock Text="正在读取工作表列表..."
                               Margin="0,12,0,0"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- 未选择文件提示 -->
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="{Binding ShowEmptyHint, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ui:SymbolIcon Symbol="DocumentAdd24" 
                                   FontSize="48" 
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    <TextBlock Text="请先选择 Excel 文件"
                               Margin="0,12,0,0"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Sheet列表 -->
                <ListBox Grid.Row="1"
                         x:Name="SheetListBox"
                         ItemsSource="{Binding SheetNames}"
                         SelectedItem="{Binding SelectedSheetName}"
                         Visibility="{Binding ShowSheetList, Converter={StaticResource BoolToVisibilityConverter}}"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" 
                                    CornerRadius="6"
                                    Margin="0,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ui:SymbolIcon Grid.Column="0" 
                                                   Symbol="DocumentTable24" 
                                                   FontSize="18"
                                                   Margin="0,0,10,0"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding}" 
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                    
                                    <ui:SymbolIcon Grid.Column="2" 
                                                   Symbol="Checkmark24" 
                                                   FontSize="16"
                                                   Foreground="{DynamicResource SystemFillColorSuccessBrush}"
                                                   Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</ui:ContentDialog>
