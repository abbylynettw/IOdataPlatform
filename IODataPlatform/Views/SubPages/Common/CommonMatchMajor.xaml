<Page x:Class="IODataPlatform.Views.SubPages.Common.CommonMatchMajor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IODataPlatform.Views.SubPages.Common"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CommonMatchMajor">

    <Grid>
        <ItemsControl ItemsSource="{Binding DataList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>

                        <ui:TextBlock Margin="20,0,0,0"
                                      Text="目标字段："
                                      VerticalAlignment="Center" />
                        <ui:TextBlock Grid.Column="1"
                                      Text="—"
                                      TextAlignment="Center"
                                      VerticalAlignment="Center" />
                        <ComboBox ItemsSource="{Binding ViewModel.Fields}"
                                  SelectedItem="{Binding ViewModel.Field}"
                                  MinWidth="150">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <ui:TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
