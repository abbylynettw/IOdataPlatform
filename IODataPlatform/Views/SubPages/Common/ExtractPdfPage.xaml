<Page 
    x:Class="IODataPlatform.Views.SubPages.Common.ExtractPdfPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:IODataPlatform.Views.SubPages.Common"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=local:ExtractPdfPage, IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ui:NavigationView.HeaderContent="提取PDF、Word、Excel数据"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.ColumnSpan="100" Orientation="Horizontal">
            <ui:Button Icon="{ui:SymbolIcon Add24}" Appearance="Primary" Command="{Binding ViewModel.AppendFilesCommand}" VerticalAlignment="Center"/>
            <ui:Button Margin="10,0,0,0" Appearance="Caution" Content="清空" Command="{Binding ViewModel.RemoveAllFilesCommand}" VerticalAlignment="Center"/>
            <ui:Button Margin="10,0,0,0" Content="开始提取" Appearance="Primary" Command="{Binding ViewModel.ConfirmCommand}" VerticalAlignment="Center"/>
            <ui:HyperlinkButton Margin="10,0,0,0" Icon="{ui:SymbolIcon Link24}" Command="{Binding ViewModel.SetDestCommand}" Content="{Binding ViewModel.Dest}" VerticalAlignment="Center"/>
        </StackPanel>

        <ui:DataGrid Grid.Row="1" Margin="0,10" ItemsSource="{Binding ViewModel.PdfFiles}" Style="{StaticResource DataGridStyle}">
            <ui:DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="文件" Binding="{Binding FullName}"/>
                <DataGridTextColumn Width="120" Header="状态" Binding="{Binding Result}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTemplateColumn Width="162" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ui:Button Content="移除" Appearance="Danger" CommandParameter="{Binding}" 
                                           Command="{Binding RelativeSource={RelativeSource AncestorType=local:ExtractPdfPage}, Path=ViewModel.RemovePdfFileCommand}"/>
                                <ui:Button Margin="2,0,0,0" Content="打开结果文件" CommandParameter="{Binding}" 
                                           Command="{Binding RelativeSource={RelativeSource AncestorType=local:ExtractPdfPage}, Path=ViewModel.OpenPdfDestFileCommand}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </ui:DataGrid.Columns>
        </ui:DataGrid>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,10,0,10" HorizontalAlignment="Center">
            <TextBlock Text="IO表标准字段名" FontSize="18" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ItemsControl ItemsSource="{Binding ViewModel.IoFields}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <ui:Button Content="{Binding}" Width="150" CommandParameter="{Binding}"
                                       Command="{Binding RelativeSource={RelativeSource AncestorType=local:ExtractPdfPage}, Path=ViewModel.CopyToClipboardCommand}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

    </Grid>

</Page>
