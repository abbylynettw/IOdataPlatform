<Page 
    x:Class="IODataPlatform.Views.SubPages.Paper.EditDevicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:IODataPlatform.Views.SubPages.Paper"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    ui:NavigationView.HeaderContent="编辑盘箱柜"
    d:DataContext="{d:DesignInstance local:EditDevicePage, IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <ui:TextBlock Text="当前项目：" VerticalAlignment="Center"/>
            <ui:TextBlock Text="{Binding ViewModel.Project.Name}" VerticalAlignment="Center"/>
            <ui:Button Margin="10,0,0,0" Icon="{ui:SymbolIcon Add24}" Command="{Binding ViewModel.AddCommand}"/>
            <ui:Button Margin="10,0,0,0" Content="批量导入" Command="{Binding ViewModel.ImportCommand}"/>
            <ui:Button Margin="10,0,0,0" Content="下载批量导入模板" Command="{Binding ViewModel.DownloadTemplateCommand}"/>
        </StackPanel>
        
        <ui:DataGrid Grid.Row="1" Style="{StaticResource DataGridStyle}" ItemsSource="{Binding ViewModel.Data}">
            <ui:DataGrid.Columns>
                <DataGridTemplateColumn Width="105" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ui:Button Icon="{ui:SymbolIcon Edit24}" CommandParameter="{Binding}"
                                           Command="{Binding RelativeSource={RelativeSource AncestorType=local:EditDevicePage}, Path=ViewModel.EditCommand}"/>
                                <ui:Button Icon="{ui:SymbolIcon Delete24}" CommandParameter="{Binding}" Appearance="Danger"
                                           Command="{Binding RelativeSource={RelativeSource AncestorType=local:EditDevicePage}, Path=ViewModel.DeleteCommand}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Width="*" Header="名称" Binding="{Binding 名称}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="*" Header="类别" Binding="{Binding 类别}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="*" Header="子类别" Binding="{Binding 子类别}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="*" Header="房间号" Binding="{Binding 房间号}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="2*" Header="外部编码" Binding="{Binding 内部编码}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="3*" Header="内部编码" Binding="{Binding 外部编码}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="*" Header="子项" Binding="{Binding 子项}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="*" Header="LOT" Binding="{Binding LOT}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="*" Header="Batch" Binding="{Binding Batch}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
            </ui:DataGrid.Columns>
        </ui:DataGrid>

    </Grid>
    
</Page>