<Page 
    x:Class="IODataPlatform.Views.SubPages.Paper.UploadPaperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:IODataPlatform.Views.SubPages.Paper"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:ly="http://lysoft/wpf"
    ui:NavigationView.HeaderContent="上传图纸"
    d:DataContext="{d:DesignInstance local:UploadPaperPage, IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <ly:NullToBooleanConverter IsInverse="True" x:Key="NullToBooleanConverter"/>
    </Page.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <ui:TextBlock Text="当前项目：" VerticalAlignment="Center"/>
            <ui:TextBlock Text="{Binding ViewModel.Project.Name}" VerticalAlignment="Center"/>
            <ui:Button Margin="10,0,0,0" Icon="{ui:SymbolIcon Add24}" Command="{Binding ViewModel.AddCommand}" IsEnabled="{Binding ViewModel.Configs, Converter={StaticResource NullToBooleanConverter}}"/>
            <ui:Button Margin="10,0,0,0" Content="上传" Appearance="Primary" Command="{Binding ViewModel.UploadCommand}"/>
        </StackPanel>

        <ui:DataGrid Grid.Row="1" Style="{StaticResource DataGridStyle}" ItemsSource="{Binding ViewModel.Data}">
            <ui:DataGrid.Columns>
                <DataGridTemplateColumn Width="53" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ui:Button Content="移除" CommandParameter="{Binding}" Appearance="Danger"
                                           Command="{Binding RelativeSource={RelativeSource AncestorType=local:UploadPaperPage}, Path=ViewModel.DeleteCommand}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="版本" Binding="{Binding Version}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="300" Header="内部编码" Binding="{Binding InnerCode}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="100" Header="盘箱柜名称" Binding="{Binding Name}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                <DataGridTextColumn Width="*" Header="全名" Binding="{Binding FullName}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
            </ui:DataGrid.Columns>
        </ui:DataGrid>

    </Grid>
    
</Page>