<Page
    x:Class="IODataPlatform.Views.Pages.ProjectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IODataPlatform.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:ProjectPage, IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <ui:TextBlock Text="项目列表"
                              VerticalAlignment="Center" />
                <ui:Button Margin="10,0,0,0"
                           Icon="{ui:SymbolIcon Add24}"
                           Appearance="Primary"
                           Command="{Binding ViewModel.AddProjectCommand}"/>
            </StackPanel>
            <ui:DataGrid Style="{StaticResource DataGridStyle}" ItemsSource="{Binding ViewModel.Projects}">
                <ui:DataGrid.Columns>
                    <DataGridTemplateColumn Header="操作" Width="105">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ui:Button  Icon="{ui:SymbolIcon Edit24}" Appearance="Primary" CommandParameter="{Binding}" Margin="2"
                                               Command="{Binding RelativeSource={RelativeSource AncestorType=local:ProjectPage}, Path=ViewModel.EditProjectCommand}"/>
                                    <ui:Button Icon="{ui:SymbolIcon Delete24}" CommandParameter="{Binding}" Appearance="Danger"
                                               Command="{Binding RelativeSource={RelativeSource AncestorType=local:ProjectPage}, Path=ViewModel.DeleteProjectCommand}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="配置表"
                                            Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            Margin="1">
                                    <ui:HyperlinkButton  Content="专业表"
                                                         Margin="1"
                                                         Command="{Binding RelativeSource={RelativeSource AncestorType=local:ProjectPage}, Path=ViewModel.ConfigureSystemCommand}"
                                                         CommandParameter="{Binding}"></ui:HyperlinkButton>

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Width="120" Header="项目名称" Binding="{Binding Name}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                    <DataGridTextColumn Width="100" Header="创建日期" Binding="{Binding Creation, StringFormat=yyyy-MM-dd}" ElementStyle="{StaticResource DataGridTextBlockCellStyle_Center}"/>
                    <DataGridTextColumn Width="*" Header="备注" Binding="{Binding Note}"/>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </StackPanel>
    </Grid>
</Page>