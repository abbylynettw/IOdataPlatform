<Page 
    x:Class="IODataPlatform.Views.Pages.DepAQJPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ly="http://lysoft/wpf"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:IODataPlatform.Views.Pages"
    d:DataContext="{d:DesignInstance local:DepAQJPage, IsDesignTimeCreatable=False}"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:cus="clr-namespace:LYSoft.Libs.Wpf.WpfUI.Custom;assembly=LYSoft.Libs.Wpf.WpfUI"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <ly:BooleanToVisiblityConverter x:Key="BooleanToVisiblityConverter" />
        <ly:BooleanToVisiblityConverter IsInverse="True"
                                        x:Key="BooleanToVisiblityInverseConverter" />
        <ly:NullToBooleanConverter IsInverse="True"
                                   x:Key="NullToBooleanConverter" />
        <local:BoolToBrushConverter x:Key="BoolToBrushConverter" />
        <local:RateToBrushConverter x:Key="RateToBrushConverter" />

        <Style TargetType="ui:MenuItem"
               BasedOn="{StaticResource UiMenuItem}"
               x:Key="EditConfigurationTableMenuItem">
            <Setter Property="Command"
                    Value="{Binding ViewModel.EditConfigurationTableCommand}" />
            <Setter Property="CommandParameter"
                    Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Header}" />
        </Style>
        <Style TargetType="ui:MenuItem"
               BasedOn="{StaticResource UiMenuItem}"
               x:Key="ExportMenuItem">
            <Setter Property="Command"
                    Value="{Binding ViewModel.ExportCommand}" />
            <Setter Property="CommandParameter"
                    Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Header}" />
        </Style>
        <Style TargetType="ui:MenuItem"
               BasedOn="{StaticResource UiMenuItem}"
               x:Key="GenerateTypicalTypeMenuItems">
            <Setter Property="Command"
                    Value="{Binding ViewModel.GenerateTypicalTypeCommand}" />
            <Setter Property="CommandParameter"
                    Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Header}" />
        </Style>
        <Style TargetType="ui:MenuItem"
               BasedOn="{StaticResource UiMenuItem}"
               x:Key="GenerateIOMenuItems">
            <Setter Property="Command"
                    Value="{Binding ViewModel.GenerateIOCommand}" />
            <Setter Property="CommandParameter"
                    Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Header}" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Menu>
                <ui:MenuItem Header="项目"
                             Icon="{ui:SymbolIcon MultiSelectRtl24}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="项目"
                                   VerticalAlignment="Center"
                                   Width="50" />
                        <ComboBox ItemsSource="{Binding ViewModel.Projects}"
                                  SelectedItem="{Binding ViewModel.Project}"
                                  Width="150">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="专业"
                                   VerticalAlignment="Center"
                                   Width="50" />
                        <ComboBox ItemsSource="{Binding ViewModel.Majors}"
                                  SelectedItem="{Binding ViewModel.Major}"
                                  Width="150">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CableSystem}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="子项"
                                   VerticalAlignment="Center"
                                   Width="50" />
                        <ComboBox ItemsSource="{Binding ViewModel.SubProjects}"
                                  SelectedItem="{Binding ViewModel.SubProject}"
                                  SelectionChanged="ComboBox_SelectionChanged"
                                  Width="150">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <Separator />
                    <ui:MenuItem Header="全部刷新"
                                 Icon="{ui:SymbolIcon ArrowSync12}"
                                 Command="{Binding ViewModel.RefreshAllCommand}" />
                </ui:MenuItem>
                <ui:MenuItem Header="配置表"
                             Icon="{ui:SymbolIcon TableSettings28}">
                    <ui:MenuItem Header="模拟量类型配置表"
                                 Style="{StaticResource EditConfigurationTableMenuItem}" />
                    <ui:MenuItem Header="数字量类型配置表"
                                 Style="{StaticResource EditConfigurationTableMenuItem}" />
                    <ui:MenuItem Header="典型信号类型配置表"
                                 Command="{Binding ViewModel.GonfigSignalGroupCommand}" />
                    <ui:MenuItem Header="控制站编号替换配置表"
                                 Style="{StaticResource EditConfigurationTableMenuItem}" />
                    <ui:MenuItem Header="变量扩展码替换配置表"
                                 Style="{StaticResource EditConfigurationTableMenuItem}" />
                    <ui:MenuItem Header="控制站机柜对照配置表"
                                 Style="{StaticResource EditConfigurationTableMenuItem}" />
                    <ui:MenuItem Header="IO卡型号配置表"
                                 Style="{StaticResource EditConfigurationTableMenuItem}" />
                </ui:MenuItem>
                <Separator />
            </Menu>
            <Menu>
                <ui:MenuItem Header="生成IO清单"
                             Icon="{ui:SymbolIcon TableMoveRight28}"
                             Command="{Binding ViewModel.GenerateIOCommand }">
                </ui:MenuItem>
            </Menu>
            <Menu IsEnabled="{Binding ViewModel.CanEdit}">
                <ui:MenuItem Header="导入IO清单"
                             Icon="{ui:SymbolIcon TableMoveRight28}"
                             Command="{Binding ViewModel.ImportCommand}" />
                <ui:MenuItem Header="IO分配"
                             Icon="{ui:SymbolIcon DeveloperBoard16}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="冗余率"
                                   VerticalAlignment="Center" />
                        <Slider Margin="10,0,0,0"
                                x:Name="SliderRedundancy"
                                Minimum="0"
                                Maximum="100"
                                Value="{Binding ViewModel.RedundancyRate}"
                                IsSnapToTickEnabled="True"
                                Width="150" />
                        <TextBlock Width="25"
                                   TextAlignment="Center"
                                   Text="{Binding ElementName=SliderRedundancy, Path=Value, Mode=OneWay}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="%"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <ui:MenuItem Header="IO自动分配"
                                 Command="{Binding ViewModel.AllocateIOCommand}" />
                    <ui:MenuItem Header="增加备用点"
                                 Icon="{ui:SymbolIcon Add24}"
                                 Command="{Binding ViewModel.AddTagCommand}"/>
                    <ui:MenuItem Header="删除备用点"
                                 Icon="{ui:SymbolIcon Delete24}"
                                 Command="{Binding ViewModel.DeleteTagCommand}"/>
                    <ui:MenuItem Header="预览IO分配结果"
                                 Icon="{ui:SymbolIcon Eye24}"
                                 Command="{Binding ViewModel.PreviewAllocateIOCommand}" />
                </ui:MenuItem>

                <ui:MenuItem Header="重新计算"
                             IsEnabled="{Binding ViewModel.CanEdit}"
                             Icon="{ui:SymbolIcon Calculator24}"
                             Command="{Binding ViewModel.RecalcCommand}" />
                <ui:MenuItem Header="发布" Icon="{ui:SymbolIcon Send24}" Command="{Binding ViewModel.PublishCommand}"/>
            </Menu>
        </StackPanel>

        <Menu Grid.Row="1"
              IsEnabled="{Binding ViewModel.AllData, Converter={StaticResource NullToBooleanConverter}}"
              Visibility="{Binding ElementName=ShowPoints ,Path=IsChecked, Converter={StaticResource BooleanToVisiblityConverter}}">
            <ui:MenuItem Header="添加"
                         IsEnabled="{Binding ViewModel.CanEdit}"
                         Icon="{ui:SymbolIcon AddCircle24}"
                         Command="{Binding ViewModel.AddCommand}" />
            <ui:MenuItem Header="刷新"
                         IsEnabled="{Binding ViewModel.CanEdit}"
                         Icon="{ui:SymbolIcon ArrowSync12}"
                         Command="{Binding ViewModel.RefreshCommand}" />
            <ui:MenuItem Header="全部删除"
                         IsEnabled="{Binding ViewModel.CanEdit}"
                         Icon="{ui:SymbolIcon Delete24}"
                         Command="{Binding ViewModel.ClearCommand}" />
            <ui:MenuItem Header="显示列"
                         Icon="{ui:SymbolIcon Settings24}">
                <ScrollViewer MaxHeight="400">
                    <StackPanel Name="ColumnsVisibilityPanel" />
                </ScrollViewer>
            </ui:MenuItem>
            <ui:MenuItem Header="筛选"
                         Icon="{ui:SymbolIcon TableSearch20}">
                <ui:MenuItem Header="重置全部筛选条件"
                             Icon="{ui:SymbolIcon ArrowSync12}"
                             Command="{Binding ViewModel.ClearAllFilterOptionsCommand}" />
                <ItemsControl ItemsSource="{Binding ViewModel.Filters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Margin="1">
                                <ui:TextBlock Text="{Binding Title}"
                                              VerticalAlignment="Center"
                                              Width="70" />
                                <ComboBox ItemsSource="{Binding Options}"
                                          SelectedItem="{Binding Option}"
                                          Width="300">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=local:DepAQJPage}, Path=ViewModel.FilterAndSortCommand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ui:MenuItem>
            <ui:MenuItem Header="导出"
                         Icon="{ui:SymbolIcon ArrowExportLtr24}">
                <ui:MenuItem Header="导出IO清册（原格式-过渡使用）"
                             Style="{StaticResource ExportMenuItem}" />
                <ui:MenuItem Header="导出IO清册（标准格式）"
                             Style="{StaticResource ExportMenuItem}" />
            </ui:MenuItem>
            <Separator />
            <ui:MenuItem IsEnabled="False"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                <ui:MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:TextBlock Text="总行数："
                                      FontSize="14" />
                        <ui:TextBlock Margin="5,0,0,0"
                                      Text="{Binding ViewModel.AllDataCount}"
                                      FontSize="14" />
                    </StackPanel>
                </ui:MenuItem.Header>
            </ui:MenuItem>
            <ui:MenuItem IsEnabled="False"
                         Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                <ui:MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:TextBlock Text="显示行数："
                                      FontSize="14" />
                        <ui:TextBlock Margin="5,0,0,0"
                                      Text="{Binding ViewModel.DisplayPointCount}"
                                      FontSize="14" />
                    </StackPanel>
                </ui:MenuItem.Header>
            </ui:MenuItem>
        </Menu>
        <cus:CustomDataGrid x:Name="Data"
                     Loaded="DataGrid_Loaded"
                     Unloaded="DataGrid_Unloaded"                    
                     Margin="0,0,0,10"
                     Grid.Row="2" 
                     ItemsSource="{Binding ViewModel.AllData}" 
                     AutoGenerateColumns="True"
                     CanUserAddRows="False" 
                     FrozenColumnCount="1" 
                     Style="{StaticResource DataGridStyle}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="106"
                                        Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ui:Button Icon="{ui:SymbolIcon Edit24}"
                                           CommandParameter="{Binding}"
                                           IsEnabled="{Binding ViewModel.CanEdit, RelativeSource={RelativeSource AncestorType=local:DepAQJPage}}"
                                           Command="{Binding ViewModel.EditCommand, RelativeSource={RelativeSource AncestorType=local:DepAQJPage}}" />
                                <ui:Button Appearance="Danger"                                           
                                           Icon="{ui:SymbolIcon Delete24}"
                                           CommandParameter="{Binding}"
                                           IsEnabled="{Binding ViewModel.CanEdit, RelativeSource={RelativeSource AncestorType=local:DepAQJPage}}"
                                           Command="{Binding ViewModel.DeleteCommand, RelativeSource={RelativeSource AncestorType=local:DepAQJPage}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </cus:CustomDataGrid>
        
    </Grid>
</Page>