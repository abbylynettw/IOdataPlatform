<Page x:Class="IODataPlatform.Views.Pages.OtherFunctionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IODataPlatform.Views.Pages"
      d:DataContext="{d:DesignInstance Type=local:OtherFunctionViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OtherFunctionPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Menu>
                <ui:MenuItem Header="生成网络接线清单"
                             Icon="{ui:SymbolIcon TableSimpleCheckmark32}"
                             Command="{Binding ViewModel.GenerateNetListCommand}"/>
                <Separator />
                <Separator />
            </Menu>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Menu>
                <ui:MenuItem Header="中控IO清单增加备用点"                             
                             Icon="{ui:SymbolIcon TableAdd28}"
                             Command="{Binding ViewModel.AddBackUpTagCommand}" />
                <ui:MenuItem Header="中控IO清单转位号表"                             
                             Icon="{ui:SymbolIcon TableSearch20}"                             
                             Command="{Binding ViewModel.GenerateBitListCommand}" />
                <Separator />
            </Menu>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Menu>
                <ui:MenuItem Header="对比盘面布置图设备清单"
                             Icon="{ui:SymbolIcon TableAdd28}"
                             Command="{Binding ViewModel.ComparePantaiPropertiesCommand}" />
                <ui:MenuItem Header="通用数据对比"
                             Icon="{ui:SymbolIcon TableSwitch24}"
                             Command="{Binding ViewModel.GenericDataComparisonCommand}" />
                <Separator />
            </Menu>
        </StackPanel>
    </Grid>
</Page>