<Page
    x:Class="IODataPlatform.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ly="http://lysoft/wpf"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:IODataPlatform.Views.Pages"
    xmlns:appearance="clr-namespace:Wpf.Ui.Appearance;assembly=Wpf.Ui"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    d:DataContext="{d:DesignInstance local:SettingsPage, IsDesignTimeCreatable=False}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    
    <Page.Resources>
        <ly:EqualsToBooleanConverter x:Key="EqualsToBooleanConverter"/>
    </Page.Resources>

    <StackPanel>
        <ui:TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="个性化"/>
        <ui:TextBlock Margin="0,12,0,0" Text="主题"/>
        <RadioButton
            Margin="0,12,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="{x:Static appearance:ApplicationTheme.Light}"
            Content="浅色"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EqualsToBooleanConverter}, ConverterParameter={x:Static appearance:ApplicationTheme.Light}, Mode=OneWay}"/>
        <RadioButton
            Margin="0,8,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="{x:Static appearance:ApplicationTheme.Dark}"
            Content="深色"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EqualsToBooleanConverter}, ConverterParameter={x:Static appearance:ApplicationTheme.Dark}, Mode=OneWay}"/>

        <ui:TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="关于 IODataPlatform"/>
        <ui:TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}"/>
    </StackPanel>
</Page>
