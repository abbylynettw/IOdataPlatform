<Page x:Class="IODataPlatform.Views.Pages.DocumentManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:IODataPlatform.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      xmlns:models="clr-namespace:IODataPlatform.Models"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      ui:NavigationView.HeaderContent="文档管理"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource ApplicationBackgroundBrush}"
                BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
            <StackPanel Orientation="Horizontal" Margin="15,10">
                <ui:Button x:Name="BtnAddFolder"
                           ToolTip="新建文件夹"
                           Icon="{ui:SymbolIcon FolderAdd24}"
                           Appearance="Secondary"
                           Foreground="#2E7D32"
                           Margin="0,0,5,0"
                           Click="AddFolder_Click"/>
                <ui:Button x:Name="BtnUploadDoc"
                           ToolTip="导入文件"
                           Icon="{ui:SymbolIcon DocumentAdd24}"
                           Appearance="Secondary"
                           Foreground="#1976D2"
                           Margin="0,0,5,0"
                           Click="UploadDoc_Click"/>
                <ui:Button x:Name="BtnEdit"
                           ToolTip="编辑"
                           Icon="{ui:SymbolIcon Edit24}"
                           Appearance="Secondary"
                           Foreground="#FB8C00"
                           Margin="0,0,5,0"
                           Click="Edit_Click"/>
                <ui:Button x:Name="BtnDelete"
                           ToolTip="删除"
                           Icon="{ui:SymbolIcon Delete24}"
                           Appearance="Danger"
                           Foreground="#D32F2F"
                           Margin="0,0,5,0"
                           Click="Delete_Click"/>
                <ui:Button x:Name="BtnSync"
                           ToolTip="同步本地"
                           Icon="{ui:SymbolIcon ArrowSync24}"
                           Appearance="Secondary"
                           Foreground="#6A1B9A"
                           Margin="0,0,5,0"
                           Click="Sync_Click"/>
                <ui:Button x:Name="BtnMoveFile"
                           ToolTip="移动文件"
                           Icon="{ui:SymbolIcon FolderArrowRight24}"
                           Appearance="Secondary"
                           Foreground="#546E7A"
                           Margin="0,0,5,0"
                           Click="MoveFile_Click"/>
                <ui:Button x:Name="BtnDownload"
                           ToolTip="下载"
                           Icon="{ui:SymbolIcon ArrowDownload24}"
                           Appearance="Secondary"
                           Foreground="#00838F"
                           Margin="0,0,5,0"
                           Click="Download_Click"/>
                <ui:Button x:Name="BtnReplace"
                           ToolTip="替换"
                           Icon="{ui:SymbolIcon ArrowSwap24}"
                           Appearance="Secondary"
                           Foreground="#388E3C"
                           Margin="0,0,5,0"
                           Click="Replace_Click"/>
                <ui:Button x:Name="BtnOpenMd"
                           ToolTip="打开md"
                           Icon="{ui:SymbolIcon Open24}"
                           Appearance="Secondary"
                           Foreground="#F57C00"
                           Margin="0,0,5,0"
                           Click="OpenMd_Click"/>
                <ui:Button x:Name="BtnExportPdf"
                           ToolTip="导出 PDF"
                           Icon="{ui:SymbolIcon DocumentPdf24}"
                           Appearance="Secondary"
                           Foreground="#5E35B1"
                           Click="ExportPdf_Click"/>

                <ui:Button x:Name="BtnOpenStandalone"
                           ToolTip="独立窗口"
                           Icon="{ui:SymbolIcon WindowNew24}"
                           Appearance="Secondary"
                           Foreground="#0050B5"
                           Margin="10,0,0,0"
                           Click="OpenStandaloneWindow_Click"/>
            </StackPanel>
        </Border>

        <!-- 主内容区：三栏布局 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="200" MinWidth="150"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：文件树 -->
            <Border Grid.Column="0" 
                    BorderThickness="0,0,1,0" 
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    MouseDown="TreeBorder_MouseDown">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TreeView x:Name="FileTreeView"
                              ItemsSource="{Binding ViewModel.TreeItems}"
                              BorderThickness="0"
                              Background="Transparent">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Margin="0,3">
                                    <ui:SymbolIcon Symbol="{Binding Icon}" FontSize="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </ScrollViewer>
            </Border>

            <!-- 分隔条1 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch"
                          Background="{DynamicResource ControlStrokeColorDefaultBrush}"/>

            <!-- 中间：Markdown预览 -->
            <Border Grid.Column="2" 
                    BorderThickness="0,0,1,0" 
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                <wv2:WebView2 x:Name="MarkdownPreview"/>
            </Border>

            <!-- 分隔条2 -->
            <GridSplitter Grid.Column="3" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch"
                          Background="{DynamicResource ControlStrokeColorDefaultBrush}"/>

            <!-- 右侧：文档大纲 -->
            <Border Grid.Column="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="文档大纲" 
                                   FontWeight="SemiBold" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding ViewModel.OutlineItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:OutlineItem}">
                                    <ui:Button Content="{Binding Text}"
                                               Tag="{Binding Id}"
                                               Margin="{Binding Indent}"
                                               FontSize="{Binding FontSize}"
                                               HorizontalAlignment="Left"
                                               HorizontalContentAlignment="Left"
                                               Appearance="Transparent"
                                               Padding="5,2"
                                               Click="OutlineItem_Click"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
